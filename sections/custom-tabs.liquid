 <ul class="custom--tabs page-width">
  {% for block in section.blocks %}
    {% if block.type == 'tab' %}
     {% if forloop.first and block.settings.heading=='' %}
      <li class="tab__list {% if forloop.first %}active{% endif %}">
        <h6
          class="custom-tab active"
          data-content-id="content--{{ block.id }}--{{ section.id }}"
        >
         {{ 'DESCRIPTION' }}
        </h6>
      </li>
       {% elsif forloop.index==2 and block.settings.heading=='' %}
      <li class="tab__list {% if forloop.first %}active{% endif %}">
        <h6
          class="custom-tab"
          data-content-id="content--{{ block.id }}--{{ section.id }}"
        >
         {{ 'ADDITIONAL INFORMATION' }}
        </h6>
      </li>
    {% elsif forloop.index==3 and block.settings.heading=='' %}
      <li class="tab__list {% if forloop.first %}active{% endif %}">
        <h6
          class="custom-tab"
          data-content-id="content--{{ block.id }}--{{ section.id }}"
        >
         {{ 'SUBSTITUTION POLICY' }}
        </h6>
      </li>
    {% else %}
      <li class="tab__list {% if forloop.first %}active{% endif %}">
        <h6
          class="custom-tab {% if forloop.first %}active{% endif %}"
          data-content-id="content--{{ block.id }}--{{ section.id }}"
        >
         {{ block.settings.heading }}
        </h6>
      </li>
    {% endif %}
    {% endif %}
  {% endfor %}
</ul>

{% for block in section.blocks %}
  {% if block.type == 'tab' %}
    <div
      id="content--{{ block.id }}--{{ section.id }}"
      class="custom__tab-content page-width {% if forloop.first %}active{% endif %}"
    >
      {% if forloop.first and block.settings.tab_content=='' %}
      {{ product.description }}
      {% elsif forloop.index==2 and block.settings.tab_content=='' %}
      <table style="margin:20px;width:50%;">
<tbody>
<tr>
<th>Dimensions</th>
<td>
  {% for variant in product.variants %}
  {% if forloop.first %}
  {{ variant.metafields.woo.width }} Ã— {{ variant.metafields.woo.height }} in
  {% endif %}
  {% endfor %}
</td>
</tr>
<tr>
<th>Upgrade:</th>
<td>
  {% for variant in product.variants %}
     {{ variant.title }}{% if forloop.last != true %}, {% endif %}
{% endfor %}
</td>
</tr>
</tbody>
</table>
      {% elsif forloop.index==3 and block.settings.tab_content=='' %}
      {{ shop.privacy_policy.body }}
      {% else %}
      {{ block.settings.tab_content }}
      {% endif %}
    </div>
  {% endif %}
{% endfor %}
{% javascript %}
  tabs= document.querySelectorAll('.custom-tab');
  tabContents= document.querySelectorAll('.custom__tab-content');

  tabs.forEach(function(tab){
      tab.addEventListener('click',function(){

          contentId = this.dataset.contentId;
          content = document.getElementById(contentId);

          tabContents.forEach(function(content){
              content.classList.remove('active');
          });

          tabs.forEach(function(tab){
              tab.classList.remove('active');
          });

          this.classList.add('active');
          content.classList.add('active');
      });
  });
{% endjavascript %}

{% schema %}
{
  "name": "Tabs",
   "blocks": [
    {
      "type": "tab",
      "name": "Tabs",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "info": "Include a heading that explains the tab."
          
        },
         {
          "type": "richtext",
          "id": "tab_content",
          "label": "Content"
        }
      ]
    }
  ],
   "presets": [
    {
      "name": "Tabs",
      "blocks": [
        {
          "type": "tab"
        }
      ]
    }
  ]
}
{% endschema %}